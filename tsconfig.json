{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/server/",
    "preserveConstEnums": true,
    "removeComments": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "watch": true
  },
  "include": [
    "./src/**/**/*"
  ],
  "exclude": [
    "./src/browser"
  ]
}